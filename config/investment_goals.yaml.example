# ================================
# 投资目标配置模板
# ================================
#
# 使用说明：
# 1. 复制此文件为 investment_goals.yaml：cp investment_goals.yaml.example investment_goals.yaml
# 2. 修改 investment_goals.yaml 中的值为你的实际目标
# 3. investment_goals.yaml 文件不会被提交到版本控制
#

# ================================
# 资金目标配置
# ================================

# 初始资金（元）
initial_capital: 500000

# 当前资金（元） - 留空则从持仓文件自动计算
current_capital: null

# 阶段性目标（元）
stage_targets:
  - 500000    # 第一阶段目标
  - 750000    # 第二阶段目标
  - 1000000   # 第三阶段目标（最终目标）

# 最终目标（元）
final_target: 1000000

# ================================
# 收益率目标
# ================================

# 目标年化收益率（小数形式，0.6表示60%）
target_annual_return: 0.60

# 目标总收益率（小数形式，1.0表示100%即翻倍）
target_total_return: 1.0

# ================================
# 基准配置
# ================================

# 基准日期（格式：YYYY-MM-DD）
base_date: "2025-01-01"

# 沪深300基准点位（基准日期的收盘点位）
hs300_base: 3145.0

# 创业板指基准点位
cybz_base: 2060.0

# 科创50基准点位
kechuang50_base: 955.0

# ================================
# 报告显示配置
# ================================

# 是否在报告中显示具体金额（false则只显示百分比和进度）
show_absolute_amounts: false

# 是否在报告中显示目标金额（false则使用"最终目标"等通用描述）
show_target_amounts: false

# 阶段目标别名（用于报告显示）
stage_names:
  - "初始阶段"
  - "中期目标"
  - "最终目标"
